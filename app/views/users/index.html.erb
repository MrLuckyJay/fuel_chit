<div class="container">

    <p id="notice"><%= notice %></p>

    <h1 align=center>System Users</h1>
    
    <div align=center  style="margin-top:10vh; margin-bottom:5vh">
        <%= link_to 'New User', new_user_path, class:'btn btn-secondary btn-lg' %>
    
    </div>
    
    <div align='center' >
        
    
    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user,class:'btn btn-success btn-sm' %></td>
            <td><%= link_to 'Edit', edit_user_path(user),class:'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    
    <br>
    
    
    
</div>