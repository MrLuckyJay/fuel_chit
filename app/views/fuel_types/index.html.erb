<p id="notice"><%= notice %></p>

<h1>Fuel Types</h1>

<table>
  <thead>
    <tr>
      <th>Fuelname</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fuel_types.each do |fuel_type| %>
      <tr>
        <td><%= fuel_type.fuelname %></td>
        <td><%= fuel_type.price %></td>
        <td><%= fuel_type.user %></td>
        <td><%= link_to 'Show', fuel_type %></td>
        <td><%= link_to 'Edit', edit_fuel_type_path(fuel_type) %></td>
        <td><%= link_to 'Destroy', fuel_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

