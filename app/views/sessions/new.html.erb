<div class="row">
    <div class="container">
            <h1 align='center'>Log In</h1>
            <div class="col-md-8 offset-md-2 mainlog">
                <div class="row">
                        <div class="col-md-6" style="background:#0000008f";>
                                
                                <h1 style="padding-top:15vh; padding-bottom:52vh;">Plese Login to Manage your Fuel Consumption</h1>
                        </div>



                        <div class="col-md-6 ">

                                <div class="card" style="padding: 4vh;margin-top:25vh; background:#ffffff54">
                                        <%= form_for(:session, local: true, url:login_path) do |form| %>
            
              
                                        <div class="form-group">
                                          <%= form.label :email %>
                                          <%= form.email_field :email, class:'form-control',placeholder:'input your Email' %>
                                        </div>
                                      
                                        <div class="form-group">
                                          <%= form.label :password %>
                                          <%= form.password_field :password, class:'form-control', placeholder:'Input your Password',autocomplete:'off' %>
                                        </div>
                                
                                        
                                      
                                        <div class="actions">
                                          <%= form.submit'login', class:'btn btn-primary btn-lg btn-block' %>
                                        </div>
                                      <% end %>
                                      
                                </div>
        
                            </div>


    
                </div>

                    
                    
                    

            </div>
            
    </div>
</div>